@model IEnumerable<UploadedImageDetails>
@{
    ViewData["Title"] = "UploadedImageInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>File Path</th>
                    <th>File Size</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model.ToList())
                    {
                        <tr>
                            <td>@item?.fileName</td>
                            <td>@item?.filePath</td>
                            <td>@item?.fileSize</td>
                            <td><a href="@item?.filePath">File Link</a></td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>

