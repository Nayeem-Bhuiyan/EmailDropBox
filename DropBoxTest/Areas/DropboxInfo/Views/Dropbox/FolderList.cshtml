@model IEnumerable<FolderDetails>
@{
    ViewData["Title"] = "FolderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Folder Name</th>
                    <th>Folder Path</th>
                    <th>File Count</th>
                    <th>Download Link</th>
                    <th>Download Zip1</th>
                    <th>Download Zip2</th>
                </tr>
            </thead>
            <tbody>
               
                  
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.folderName</td>
                    <td>@item.folderPath</td>

                    <td>
                        @*@foreach (var file in item.fileDetails)
            {
               <span>@file.fileDownloadLink</span>
            }*@
                        @item.count
                    </td>
                    <td><a href="@item.downloadLink" class="btn btn-primary">Go To Folder</a></td>
                    <td><a asp-area="DropboxInfo" asp-controller="Dropbox" asp-action="DownloadZip" class="btn btn-primary">DownloadZip2</a></td>
                    <td><a asp-area="DropboxInfo" asp-controller="Dropbox" asp-action="GetBlobDownload" class="btn btn-primary">DownloadZip3</a></td>
                    @*<td><a asp-area="DropboxInfo" asp-controller="Dropbox" asp-action="FileDownload" class="btn btn-primary" onclick="DownloadZipFile()">DownloadZip3</a></td>*@
                    <td><a class="btn btn-primary" onclick="DownloadZipFile()">DownloadZip3</a></td>

                </tr>
                    }
                
            </tbody>
        </table>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function() {

        })

        function DownloadZipFile() {
            $.ajax({
                /*url:"/DropboxInfo/Dropbox/FileDownload",*/
                url:"/DropboxInfo/Dropbox/GetBlobDownload",
                type:"GET"
            }).done(function(data) {
                alert(data);
            })
        }
    </script>

       

}