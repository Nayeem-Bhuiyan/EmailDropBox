@model IEnumerable<FolderDetails>
@{
    ViewData["Title"] = "FolderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>File Path</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
               
                  
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.folderName</td>
                            <td>@item.folderPath</td>
                            <td><a href="@item.downloadLink" class="btn btn-primary" download>Download</a></td>
                        </tr>
                    }
                
            </tbody>
        </table>
    </div>
</div>

